@model Administrador;
@using Cemidex_BD.Models;


@{

    IEnumerable<Administrador> admins = ViewBag.Administradores;
}

<center>
    <div class="container ctcontainer">
        <center>
            <div class="row">

                <div class="col-xl-8 offset-xl-2">

                    <br>
                    <h1 class="meiuca">
                        Relatório do Administrador
                    </h1>
                    <hr>
                    <div class="controls">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal"
                            data-target="#exampleModalCenter" style="justify-content: center; display: inline-block;">
                            Cadastrar novo Administrador
                        </button>
                        <div class="modal fade bd-example-modal-lg" id="exampleModalCenter" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalCenterTitle" aria-hidden="true" style="border-radius: 10px;">
                            <div class="modal-dialog modal-dialog-centered modal-lg" role="document"
                                style="border-radius: 10px;">
                                <div class="modal-content" style="border-radius: 10px;">
                                    <div class="modal-body">
                                        <main role="main">
                                            <form method="POST" id="cadastrar">
                                                <div class="controls">
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label asp-for="@Model.Nome"></label>
                                                            <input class="form-control"
                                                                placeholder="Insira o nome do Funcionário"
                                                                required="required" data-error="Insira um nome válido."
                                                                asp-for="@Model.Nome">
                                                            <div class="help-block with-errors"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <label asp-for="@Model.CPF"></label>
                                                        <input class="form-control"
                                                            placeholder="Insira o CPF do Funcionário"
                                                            required="required" data-error="Insira um CPF válido."
                                                            asp-for="@Model.CPF">
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <label asp-for="@Model.Email"></label>
                                                        <input class="form-control"
                                                            placeholder="Insira o email do Funcionário"
                                                            required="required" data-error="Insira um email válido."
                                                            asp-for="@Model.Email">
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <label asp-for="@Model.Senha"></label>
                                                        <input class="form-control" placeholder="123456"
                                                            asp-for="@Model.Senha" required="required" data-error="Insira uma senha válido.">
                                                        <span class="text-danger text-sm"
                                                            asp-validation-for="@Model.Senha"></span>
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <label asp-for="@Model.ConfSenha"></label>
                                                        <input class="form-control" placeholder="123456"
                                                            asp-for="@Model.ConfSenha" required="required" data-error="Insira uma senha válido.">
                                                        <span class="text-danger text-sm"
                                                            asp-validation-for="@Model.ConfSenha"></span>
                                                        <div class="help-block with-errors"></div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label asp-for="@Model.Telefone"></label>
                                                            <input class="form-control" placeholder="Insira o telefone"
                                                                required="required"
                                                                data-error="Insira um telefone válido"
                                                                asp-for="@Model.Telefone">
                                                            <div class="help-block with-errors"></div>
                                                        </div>
                                                    </div>
                                                    <div class="form-check form-switch mb-3">
                                                        <input class="form-check-input" type="checkbox" role="switch"
                                                            asp-for="@Model.Gerente">
                                                        <label class="form-check-label"
                                                            asp-for="@Model.Gerente"></label>
                                                    </div>
                                                    <a asp-controller="Falecido" asp-action="Index"
                                                        class="btn btn-secondary">Cancelar</a>
                                                    <button id="adquirir" form="cadastrar" type="submit"
                                                        class="btn btn-primary frase">Salvar</button>
                                                    <br><br>
                                                </div>
                                            </form>
                                        </main>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br><br>
                        @foreach (var ademir in admins)
                        {
                            string x;
                            if(ademir.Gerente == true){
                                x = "Verdadeiro";
                            }else{
                               x = "Falso";
                            }

                            <div class="card">
                                <div class="card-body morto">
                                    <h2 class="card-title">@ademir.Nome</h2><br>
                                    <button class="btn btn-primary pemorto" type="button" data-toggle="collapse"
                                    data-target='@($"#b{ademir.IDAdministrador}")' aria-expanded="false"
                                    aria-controls="collapseExample">
                                        Registros</button><br>
                                    <div class="collapse" id='@($"b{ademir.IDAdministrador}")'>
                                        <div class="card card-body" style="color:black;">
                                            <p>Nome: @ademir.Nome</p>
                                            <p>CPF: @ademir.CPF</p>
                                            <p>E-Mail: @ademir.Email</p>
                                            <p>Telefone: @ademir.Telefone</p>
                                            <p>Id do Administrador: @ademir.IDAdministrador</p>
                                            <p>Gerente: @x</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br>

                        }
                    </div>
                </div>
            </div>
        </center>
    </div>
</center>